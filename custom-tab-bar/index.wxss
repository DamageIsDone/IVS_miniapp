/* custom-tab-bar/index.wxss */
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #ffffff;
  border-top: 1px solid #eeeeee;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab-bar-item .text {
  color: #666666;
  font-size: 16px;
  font-weight: 500;
}
.tab-bar-item .text.selected {
  color: #0088ff !important;
  font-weight: 600;
}

.tab-bar-information {
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.information-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #0088ff;
  color: #ffffff;
  font-size: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 136, 255, 0.3);
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.popup-content {
  width: 85%;
  max-width: 320px;
  background-color: #ffffff;
  border-radius: 12px;
  padding: 20px;
  box-sizing: border-box;
}

.detail-header {
  border-bottom: 1px solid #eeeeee;
  padding-bottom: 15px;
  margin-bottom: 15px;
}

.detail-title {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
  display: block;
  text-align: center;
}

.detail-body {
  font-size: 14px;
  color: #666666;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 20px;
}

.popup-btns {
  display: flex;
  justify-content: center;
}

.btn-confirm {
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #0088ff;
  color: #ffffff;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  padding: 0;
}

.btn-confirm::after {
  border: none;
}