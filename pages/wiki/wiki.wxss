.wiki-container {
  background-color: #f5f5f5;
  height: 100vh;
  padding: 180rpx 20rpx 160rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #F5F5F5;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 18rpx;
  padding: 18rpx 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}
.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.tab-wrap {
  display: flex;
  margin: 0 5rpx 50rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.tab-item {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  position: relative;
  text-align: center;
}
.tab-item.active {
  color: #6c2d91;
  font-weight: 500;
}
.tab-item .underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 4rpx;
  background-color: #6c2d91;
}

.character-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100% - 270rpx);
  overflow-y: auto;
  width: 100%;
  padding-bottom: 20rpx;
}

.character-card {
  width: 90%;
  max-width: 700rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-sizing: border-box;
  height: 400rpx;
}

.character-card.no-margin {
  margin-bottom: 0;
}

.character-card .avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  object-fit: contain;
  background-color: #e8e8e8; /* 浅灰色背景，和白色卡片区分开 */
  border: 2rpx solid #d0d0d0; /* 浅灰色边框 */
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08); /* 轻微阴影，增加层次感 */
}

.character-card .text-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 100%;
}

.character-card .name {
  font-size: 42rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.character-card .career {
  font-size: 36rpx;
  color: #666;
  line-height: 1.3;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
  margin-top: 100rpx;
  text-align: center;
}