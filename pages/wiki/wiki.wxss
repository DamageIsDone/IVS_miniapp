/* pages/wiki/wiki.wxss */
.wiki-container {
  background-color: #f5f5f5;
  height: 100vh;
  padding: 180rpx 20rpx 160rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999; /* 确保在最上层 */
  background-color: #F5F5F5; /* 背景色和页面一致，避免透传 */
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 18rpx;
  padding: 18rpx 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}
.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.tab-wrap {
  display: flex;
  margin: 0 5rpx 50rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.tab-item {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  position: relative;
  text-align: center;
}
.tab-item.active {
  color: #6c2d91;
  font-weight: 500;
}
.tab-item .underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 4rpx;
  background-color: #6c2d91;
}

.character-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100% - 270rpx);
  overflow-y: auto;
  width: 100%;
  padding-bottom: 20rpx;
}

/* 卡片 */
.character-card {
  width: 90%; /* 改用百分比，更适配不同屏幕，几乎占满宽度 */
  max-width: 700rpx; /* 限制最大宽度，避免太宽 */
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx; /* 缩小图片和文字间距，减少右侧空白 */
  box-sizing: border-box;
  height: 400rpx; /* 进一步加高卡片 */
}

.character-card.no-margin {
  margin-bottom: 0;
}

/* 图片：保持尺寸，保证完整显示 */
.character-card .avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  object-fit: contain;
}

/* 文字区域：占满剩余空间，减少右侧空白 */
.character-card .text-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 100%;
}

.character-card .name {
  font-size: 42rpx; /* 名字字号 */
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.character-card .career {
  font-size: 36rpx;
  color: #666;
  line-height: 1.3;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
  margin-top: 100rpx;
  text-align: center;
}