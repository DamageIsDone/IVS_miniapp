/* pages/wiki/wiki.wxss */
.wiki-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 180rpx 20rpx 160rpx;
  box-sizing: border-box;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 18rpx;
  padding: 18rpx 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}
.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

/* 分类标签 */
.tab-wrap {
  display: flex;
  margin: 0 5rpx 50rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.tab-item {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  position: relative;
  text-align: center;
}

.tab-item.active {
  color: #6c2d91;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 4rpx;
  background-color: #6c2d91;
}

/* 角色卡片 */
.character-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx; /* 卡片之间的间距 */
  align-items: center;
}
.character-card {
  width: 600rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 36rpx 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}
.name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.real-name {
  font-size: 24rpx;
  color: #999;
}