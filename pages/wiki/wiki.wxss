.wiki-container {
  background-color: #f5f5f5;
  height: 100vh;
  padding: 180rpx 20rpx 160rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999; 
  background-color: #F5F5F5; 
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 18rpx;
  padding: 18rpx 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}
.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.tab-wrap {
  display: flex;
  margin: 0 5rpx 50rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.tab-item {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  position: relative;
  text-align: center;
}
.tab-item.active {
  color: #6c2d91;
  font-weight: 500;
}
.tab-item .underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 4rpx;
  background-color: #6c2d91;
}

.character-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100% - 270rpx);
  overflow-y: auto;
  width: 100%;
  padding-bottom: 20rpx;
}

/* 卡片样式 */
.character-card {
  width: 90%; 
  max-width: 700rpx; 
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx; 
  box-sizing: border-box;
  height: 400rpx; 
  cursor: pointer;
}

.character-card.no-margin {
  margin-bottom: 0;
}

.character-card .avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  object-fit: contain;
  background-color: #e8e8e8;
  border: 2rpx solid #d0d0d0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.character-card .text-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 100%;
}

.character-card .name {
  font-size: 42rpx; 
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.character-card .career {
  font-size: 36rpx;
  color: #666;
  line-height: 1.3;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
  margin-top: 100rpx;
  text-align: center;
}

/* 人格脉络弹窗样式 */
.talent-detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.talent-detail-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 650rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
  box-sizing: border-box;
}

/* 角色详情弹窗样式 */
.identity-detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.identity-detail-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 通用弹窗样式 */
.popup-close {
  position: sticky;
  top: 20rpx;
  align-self: flex-end;
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
  margin-bottom: 20rpx;
}

.popup-content, .identity-popup-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.popup-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  object-fit: contain;
  background-color: #e8e8e8;
  border: 2rpx solid #d0d0d0;
  margin-bottom: 10rpx;
}

.popup-name {
  font-size: 40rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.popup-career {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 基础信息样式 */
.basic-info {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  margin-bottom: 8rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
  min-width: 80rpx;
  text-align: right;
  margin-right: 10rpx;
}

.info-value {
  color: #333;
  flex: 1;
  text-align: left;
}

/* 模块样式 */
.module-wrap {
  width: 100%;
  margin-bottom: 25rpx;
}

.module-title {
  font-size: 32rpx;
  color: #6c2d91;
  font-weight: 500;
  margin-bottom: 16rpx;
  text-align: left;
  width: 100%;
}

.module-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  width: 100%;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.feature-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  object-fit: contain;
  background-color: #e8e8e8;
  flex-shrink: 0;
}

.feature-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

/* 加载状态 */
.loading-wrap {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading {
  font-size: 28rpx;
  color: #999;
}

/* 空数据提示 */
.empty-module {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
  text-align: center;
  width: 100%;
}

/* 人格脉络弹窗专属样式 */
.popup-label {
  align-self: flex-start;
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  margin-top: 10rpx;
}

.popup-value {
  align-self: flex-start;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-wrap: break-word;
}