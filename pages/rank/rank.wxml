<navigation-bar title="排行榜" background="#6C5CE7" color="#fff" />

<view class="rank-container">
  <!-- 标签切换栏 -->
  <view class="tab-wrap">
    <view class="tab-item {{currentTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-tab="0">
      监管者
    </view>
    <view class="tab-item {{currentTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-tab="1">
      求生者
    </view>
  </view>

  <!-- 空数据提示-->
  <view class="empty-tip" wx:if="{{!rankList.length}}">
    暂无{{currentTab === 0 ? '监管者' : '求生者'}}胜率数据
  </view>

  <!-- 排行榜列表 -->
  <view class="rank-list" wx:else>
    <view class="rank-item" wx:for="{{rankList}}" wx:key="userId">
      <view class="rank-num">{{item.rank}}</view>
      <view class="rank-name">{{item.userName}}</view>
      <view class="rank-rate">
        {{item.winRateText}} ({{item.winCount}}胜/{{item.totalCount}}场)
      </view>
    </view>
  </view>
</view>