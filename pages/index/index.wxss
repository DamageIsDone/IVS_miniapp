/* index.wxss */
.scrollarea {
  height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background-color: #f9f9f9;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-container {
  flex-shrink: 0;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.info-container {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.game-info {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-buttons {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}

.action-buttons button {
  width: 60%;
  margin: 0 20rpx;
}

/* 测试区域 */
.test-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-top: 30rpx;
}

.result {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  width: 80%;
  word-break: break-all;
}

/* 绑定弹窗 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
}

.popup-content text {
  display: block;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.popup-content input {
  border: 2rpx solid #ccc;
  margin: 20rpx 0;
  padding: 24rpx;          /* 增大内边距，使输入框更大 */
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;        /* 增大字体，方便输入 */
}

.popup-btns {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.popup-btns button {
  width: 40%;
}