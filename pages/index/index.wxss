/* index.wxss */
.scrollarea {
  height: 100vh;
  background: linear-gradient(145deg, #f5e9ff, #e6d9ff); 
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

/* 用户卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 48rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(106, 13, 173, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar-wrapper {
  flex-shrink: 0;
  margin-right: 30rpx;
  border-radius: 50%;
  padding: 6rpx;
  background: linear-gradient(145deg, #ffffff, #f0e6ff);
  box-shadow: 0 4rpx 12rpx rgba(106, 13, 173, 0.2);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
}

.info-container {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d0a4a;
  margin-bottom: 10rpx;
}

.game-info {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #4a2a6b;
}

.label {
  line-height: 1.5;
}

.action-btn {
  margin-left: 20rpx;
  flex-shrink: 0;
}

.btn-bind {
  background: #7b2eda;
  color: white;
  border-radius: 60rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(123, 46, 218, 0.4);
}

.btn-unbind {
  background: transparent;
  color: #7b2eda;
  border: 2rpx solid #7b2eda;
  border-radius: 60rpx;
  font-size: 28rpx;
  padding: 14rpx 30rpx;
}

.get-user-btn {
  background: #7b2eda;
  color: white;
  border-radius: 60rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
  width: 100%;
}

/* 签到卡片 */
.sign-card {
  background-color: #ffffff; 
  background-size: cover;
  background-position: center;
  border-radius: 48rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 30rpx rgba(106, 13, 173, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  min-height: 160rpx;
}

.sign-left {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
}

.sign-days {
  font-size: 80rpx;
  font-weight: 700;
  color: #7b2eda;
  line-height: 1;
  margin-right: 8rpx;
}

.sign-text {
  font-size: 36rpx;
  color: #4a2a6b;
  margin-right: 20rpx;
}

.sign-slogan {
  font-size: 26rpx;
  color: #8f6bb3;
  width: 100%;
  margin-top: 10rpx;
}

.sign-right {
  flex-shrink: 0;
}

.btn-sign {
  background: #7b2eda;
  color: white;
  border-radius: 60rpx;
  font-size: 32rpx;
  padding: 20rpx 48rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(123, 46, 218, 0.4);
  transition: transform 0.2s;
}
.btn-sign:active {
  transform: scale(0.96);
}
.btn-sign.disabled {
  background: #d9c6f2;
  color: #6a4e8f;
  box-shadow: none;
}

/* 功能入口网格 */
.feature-grid {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.feature-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 48rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(106, 13, 173, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.feature-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #2d0a4a;
}

/* 抽签卡片 */
.fortune-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 48rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(106, 13, 173, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;  
}

.fortune-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #7b2eda;
  margin-bottom: 20rpx;
}

.fortune-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #2d0a4a;
  margin: 20rpx 0;
  line-height: 1.4;
  text-align: center;   
}

.fortune-reload {
  background: #7b2eda;
  color: white;
  border-radius: 60rpx;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  margin-top: 20rpx;
  display: inline-block;
  box-shadow: 0 4rpx 12rpx rgba(123, 46, 218, 0.4);
  transition: transform 0.2s;
}
.fortune-reload:active {
  transform: scale(0.96);
}


/* 绑定弹窗 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  backdrop-filter: blur(12rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20rpx);
  padding: 48rpx 40rpx;
  border-radius: 60rpx;
  width: 85%;
  max-width: 600rpx;
  box-shadow: 0 40rpx 60rpx rgba(0,0,0,0.2);
}

.popup-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d0a4a;
}

.input-group input {
  border: 2rpx solid #e2e8f0;
  padding: 28rpx 24rpx;
  border-radius: 36rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  background: #ffffff;
  margin-bottom: 30rpx;
}

.popup-btns {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.popup-btns button {
  flex: 1;
  border-radius: 60rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
  margin: 0;
}

.btn-cancel {
  background: #f1f5f9;
  color: #334155;
}
.btn-confirm {
  background: #7b2eda;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(123,46,218,0.3);
}

/* 详情弹窗 */
.detail-content {
  text-align: center;
}

.detail-header {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2d0a4a;
}

.detail-body {
  margin-bottom: 40rpx;
  font-size: 32rpx;
  color: #4a2a6b;
  line-height: 1.6;
}

.detail-thanks {
  display: block;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.detail-developers {
  margin-top: 10rpx;
}

.detail-subtitle {
  font-weight: 500;
}