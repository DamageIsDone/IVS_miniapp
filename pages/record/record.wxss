/* pages/record/record.wxss */
page {
  background-color: #F5F5F5;
  /* 页面整体高度占满屏幕 */
  height: 100vh;
  overflow: auto;
}

.container {
  /* 取消弹性布局，改为相对定位 */
  position: relative;
  height: 100%;
  width: 100%;
}

/* 固定顶部的头部区域（导航栏+历史战绩+数据卡片） */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999; /* 确保在最上层 */
  background-color: #F5F5F5; /* 背景色和页面一致，避免透传 */
}

/* navigation-bar 组件样式（如果组件内样式不够，补充这里） */
.custom-navbar {
  background-color: #673AB7;
  color: #FFFFFF;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
}
.navbar-main-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 独立的历史战绩栏样式 */
.history-bar {
  background-color: #673AB7;
  color: #FFFFFF;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}
.history-title {
  font-size: 32rpx;
  font-weight: bold;
}
.history-actions {
  display: flex;
  padding-left: 20rpx;
}
.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
/* .action-btn:first-child {
  margin-left: 0;
} */
.action-btn .icon {
  font-size: 28rpx;
}

/* 数据概览卡片 */
.stats-card {
  background-color: #FFFFFF;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.stats-row {
  margin-bottom: 25rpx;
}
/* .stats-row:last-of-type {
  margin-bottom: 15rpx;
} */
.stats-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 5rpx;
}
.stats-sub {
  font-size: 24rpx;
  color: #666666;
}

/* 排行榜按钮 */
.rank-btn {
  background-color: #9C27B0;
  color: #FFFFFF;
  font-size: 26rpx;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 8rpx;
  margin-top: 10rpx;
  transition: all 0.2s ease;
}
/* .rank-btn:active {
  background-color: #7B1FA2;
  transform: scale(0.98);
} */
.rank-btn-text {
  color: #FFFFFF;
  font-weight: 500;
}

/* 战绩列表容器（核心：留出顶部固定区域的高度） */
.record-list-container {
  /* 顶部间距 = 导航栏(80rpx) + 历史战绩栏(70rpx) + 数据卡片(220rpx) + 20rpx留白 */
  padding-top: 450rpx;
  /* 高度占满屏幕，减去顶部间距 */
  height: 100%;
  box-sizing: border-box;
}
.record-list {
  margin: 0 20rpx;
}

/* 单条战绩样式 */
.record-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 5rpx rgba(0,0,0,0.03);
}
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.record-role {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}
.header-right {
  display: flex;
  align-items: center;
  /* gap: 20rpx; */
}
.record-result {
  font-size: 26rpx;
  font-weight: 600;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}
.win .record-result {
  background-color: #E8F5E9;
  color: #4CAF50;
}
.lose .record-result {
  background-color: #FFEBEE;
  color: #F44336;
}
.draw .record-result {
  background-color: #FFF3E0;
  color: #FF9800;
}
.expand-btn {
  font-size: 24rpx;
  color: #999999;
}

/* 战绩详情 */
.record-detail {
  padding-top: 10rpx;
  border-top: 1rpx solid #EEEEEE;
}
.detail-item {
  display: flex;
  align-items: center;
  padding: 5rpx 0;
  font-size: 26rpx;
}
.detail-icon {
  width: 40rpx;
  text-align: center;
  font-size: 24rpx;
  margin-right: 15rpx;
}
.detail-text {
  flex: 1;
  color: #333333;
}
.detail-tag {
  font-size: 24rpx;
  padding: 3rpx 8rpx;
  border-radius: 4rpx;
}
.win-tag {
  background-color: #E8F5E9;
  color: #2E7D32;
}
.lose-tag {
  background-color: #FFEBEE;
  color: #C62828;
}

/* 自定义修改弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.edit-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.modal-section {
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.section-sub {
  font-size: 24rpx;
  color: #666;
  margin: 15rpx 0;
  display: block;
}

.tag-group {
  display: flex;
  flex-wrap: wrap;
  /* gap: 15rpx; */
  margin-bottom: 10rpx;
}

.tag-item {
  background-color: #9C27B0;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* .tag-item:active {
  background-color: #7B1FA2;
  transform: scale(0.95);
} */

.modal-actions {
  display: flex;
  /* gap: 20rpx; */
  margin-top: 40rpx;
}

.modal-actions .action-btn {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.modal-actions .confirm {
  background-color: #9C27B0;
  color: #fff;
}

.modal-actions .cancel {
  background-color: #f0f0f0;
  color: #333;
}

