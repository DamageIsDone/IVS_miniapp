/* 全局重置 - 确保导航栏显示 */
page {
 
  background-color: #ffffff !important; /* 页面全白背景 */
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  min-height: 100vh;
  padding-top: var(--navigation-bar-height); /* 给导航栏留空间 */
}

/* 主容器 */
.container {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #ffffff;
}

/* 导航栏右侧提交按钮 */
.nav-submit-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}

.nav-submit-btn .icon {
  font-size: 28rpx;
  color: #662299;
  font-weight: bold;
}

/* 可滚动内容区 - 适配导航栏高度 */
.content {
  width: 100%;
  height: calc(100vh - var(--navigation-bar-height) - 40rpx);
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}

/* 模块容器 - 白色背景 + 阴影边框 */
.section {
  background-color: #ffffff !important; /* 模块内白色背景 */
  border: 1rpx solid #eeeeee; /* 浅灰色边框区分模块 */
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05); /* 轻微阴影增强层次感 */
}

/* 模块标题 */
.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #333333;
  font-weight: 500;
}

/* 标签行 */
.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

/* 选择标签 - 紫色按钮（对比白色背景） */
.tag {
  background-color: #662299;
  color: #ffffff;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.tag:active {
  background-color: #7b2cbf;
  transform: scale(0.98);
}

/* 底部选择器 */
.bottom-picker {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 9999;
  transform: translateY(100%);
  transition: all 0.3s ease;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.bottom-picker.show {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.picker-header text {
  color: #662299;
  font-size: 28rpx;
  font-weight: 500;
}

/* 选择器选项 */
picker-view {
  width: 100%;
  height: 300rpx;
  background-color: #ffffff;
}

picker-view-column view {
  line-height: 70rpx !important;
  height: 70rpx !important;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
}